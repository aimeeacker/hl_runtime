[Unit]
Description=FIFO listener
After=network-online.target
Wants=network-online.target
#PartOf=hyperliquid.service

[Service]
Type=simple
UMask=0022
WorkingDirectory=@ROOT@
ExecStart=@ROOT@/.venv/bin/python @ROOT@/runtime_watchdog.py
KillSignal=SIGINT
Restart=always

NoNewPrivileges=true
PrivateTmp=true
ProtectHome=false
ProtectSystem=full
ReadWritePaths=@ROOT@
SyslogIdentifier=hl-listener
Slice=hl_runtime.slice

[Install]
WantedBy=default.target
